<Window x:Class="BulletHellGame.Floor1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulletHellGame"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="Black">
            <Image x:Name="PlayerImage" Width="48" Height="48" Canvas.Left="100" Canvas.Top="100"/>
        </Canvas>
        <Canvas x:Name="MiniMapCanvas" Width="230" Height="230"
        HorizontalAlignment="Right" VerticalAlignment="Top"
        Margin="10"
        Background="#80000000"
        Visibility="Collapsed"
        Panel.ZIndex="999">
        </Canvas>
        <TextBlock x:Name="TimerText"
   Text="Час: 00:00"
   Foreground="White"
   FontSize="24"
   FontWeight="Bold"
   Background="#80000000"
   Padding="8"
   Visibility="Collapsed"
   Width="200"
   TextAlignment="Center"
   HorizontalAlignment="Center"
   VerticalAlignment="Top"
   Margin="0,10,0,0"/>

        <!-- Верхній лівий кут: HP, броня, гроші -->
        <Border Background="#66000000" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <StackPanel x:Name="PlayerStatsPanel" Orientation="Vertical" Width="120">
                <TextBlock x:Name="HpText" FontSize="18" Foreground="White" Text="HP: 0" Margin="0,2"/>
                <TextBlock x:Name="ArmorText" FontSize="18" Foreground="LightBlue" Text="Armor: 0" Margin="0,2"/>
                <TextBlock x:Name="MoneyText" FontSize="18" Foreground="Gold" Text="Money: 0" Margin="0,2"/>
            </StackPanel>
        </Border>

        <!-- Нижній правий кут: патрони та перезарядка -->
        <Border Background="#66000000" Padding="8,4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <StackPanel x:Name="AmmoPanel" Orientation="Vertical" Width="120">
                <TextBlock x:Name="AmmoText" FontSize="18" Foreground="White" Text="Ammo: 0/0" HorizontalAlignment="Right" Margin="0,2"/>
                <TextBlock x:Name="ReloadText" FontSize="18" Foreground="Orange" Text="Reload..." HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,2"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
